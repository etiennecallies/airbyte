  "type": "object",
  "properties": {
    "id": {
      "type": ["integer"]
    },
    "uuid": {
      "type": ["string", "null"]
    },
    "callId": {
      "type": ["integer"]
    },
    "speakerId": {
      "type": ["integer"]
    },
    "content": {
      "type": ["string"]
    },
    "startTime": {
      "type": ["number"]
    },
    "endTime": {
      "type": ["number"]
    },
    "topicIds": {
      "type": ["array"],
      "items": { "type": "integer" }
    }
  }
}
